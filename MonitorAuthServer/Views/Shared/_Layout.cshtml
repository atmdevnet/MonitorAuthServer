        <script src="~/js/app-run.js"></script>
        @*<script src="~/js/prov-serverconfig.js"></script>*@
        <script src="~/js/svc-lib.js"></script>
        <script src="~/js/svc-api.js"></script>
        <script src="~/js/svc-auth.js"></script>
        @*<script src="~/js/ctrl-authcallback.js"></script>*@
        <script src="~/js/ctrl-monitor.js"></script>
        <script src="~/js/ctrl-authprofile.js"></script>
        <script src="~/js/ctrl-login.js"></script>
        <script src="~/js/directive/login.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/angular/angular.min.js"></script>
        <script src="~/lib/angular-route/angular-route.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/auth0.js/build/auth0.min.js"></script>
        <script src="~/lib/angular-auth0/dist/angular-auth0.min.js"></script>
        <script src="~/lib/angular-jwt/dist/angular-jwt.min.js"></script>
        <script src="~/lib/jsrender/jsrender.min.js"></script>
        @*<script src="~/lib/jsviews/jsviews.min.js"></script>*@
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/ej/scripts/ej.365.all.min.js"></script>
        <script src="~/lib/ej/i18n/ej.culture.pl-PL.js"></script>
